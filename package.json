{
  "name": "ottoapi-guidelines",
  "version": "1.0.0",
  "description": "This repository is the source for establishing a uniform API standard (aka API Guidelines), which serves as a set of rules for the creation of new APIs within MA-EC. (In the future, this standard can also be used to unify existing APIs.) The [API Manifesto](/manifesto.md) helps to establish this standard and comprises values that a work group has agreed upon in advance.",
  "main": "index.js",
  "scripts": {
    "build": "(for S in clean images js collect css; do npm run build:$S; [ $? -ne 0 ] && exit 1; done; exit 0;)",
    "build:images": "cp -R src/img/* dist",
    "build:js": "rollup -c",
    "build:clean": "npm run clean",
    "build:css": "sass src/scss/main.scss:dist/main.css -I node_modules",
    "build:collect": "FORCE_COLOR=true DEBUG_COLORS=true DEBUG_DEPTH=6 DEBUG_LEVEL=debug ts-node -T src/collect/index.ts --color",
    "dev": "npm run build:clean && concurrently --kill-others \"npm run watch:collect\" \"npm run watch:js\" \"npm run watch:css\"",
    "watch:collect": "nodemon --config config/nodemon.collect.json -x 'npm run build:collect'",
    "watch:css": "nodemon --config config/nodemon.css.json -x 'npm run build:css && npm run build:images'",
    "watch:js": "nodemon --config config/nodemon.js.json -x 'npm run build:js'",
    "serve": "browser-sync start -s \"dist\" -f \"dist\" -w",
    "clean": "rm -rf ./tmp ./build ./dist && mkdir -p ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otto-ec/ottoapi_guidelines.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/otto-ec/ottoapi_guidelines/issues"
  },
  "homepage": "https://github.com/otto-ec/ottoapi_guidelines#readme",
  "bender": {
    "eslint_env_node": true,
    "eslint_env_browser": true,
    "eslint_plugin_compat": false
  },
  "toolbox": {
    "configs": [
      "@otto-ec/toolbox-config-assets"
    ]
  },
  "dependencies": {
    "@otto-ec/assets-debug": "^1.1.2",
    "@otto-ec/bender": "^1.6.5",
    "@otto-ec/kestrel": "^3.3.6",
    "@otto-ec/toolbox": "^1.12.2",
    "@otto-ec/toolbox-config-assets": "^1.25.9",
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/js-yaml": "^3.12.3",
    "@types/markdown-it": "^10.0.1",
    "@types/node": "^14.0.1",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "globby": "^11.0.0",
    "handlebars": "^4.7.6",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "js-yaml": "^3.13.1",
    "markdown-it": "^10.0.0",
    "markdown-it-attrs": "^3.0.2",
    "markdown-it-container": "^2.0.0",
    "markdown-it-front-matter": "^0.2.1",
    "markdown-it-highlightjs": "^3.1.0",
    "markdownlint-cli": "^0.23.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.3",
    "rollup": "^2.10.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.26.5",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2",
    "uikit": "^3.4.6"
  }
}
