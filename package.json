{
  "name": "@otto-ec/ottoapi-guidelines",
  "version": "1.1.0-update-document-structure.6",
  "description": "This repository is the source for establishing a uniform API standard (aka API Guidelines), which serves as a set of rules for the creation of new APIs within MA-EC. (In the future, this standard can also be used to unify existing APIs.) The [API Manifesto](/manifesto.md) helps to establish this standard and comprises values that a work group has agreed upon in advance.",
  "files": [
    "content/**/*.md"
  ],
  "scripts": {
    "build": "GUIDELINES_PATH=/content/guidelines VITE_GUIDELINES_DEV=true vite -c vite.config.ts build",
    "build:clean": "npm run clean",
    "build:collect": "FORCE_COLOR=true DEBUG_COLORS=true DEBUG_DEPTH=6 DEBUG_LEVEL=debug DEBUG=collect:* npm run collect",
    "dev": "npm run serve",
    "dev:docker": "npm run serve",
    "lint": "bender ml --files \"content/guidelines/**/*.md\"",
    "nextRuleId": "npm run collect -- nextid",
    "links:broken": "npm run collect -- bad-links",
    "rules:nextid": "npm run collect -- nextid",
    "rules:list": "npm run collect -- list-rules",
    "collect": "ts-node --project tsconfig.cli.json -T src/collect/index.ts ",
    "serve": "GUIDELINES_PATH=/content/guidelines VITE_GUIDELINES_DEV=true vite -c vite.config.ts",
    "preview": "GUIDELINES_PATH=/content/guidelines VITE_GUIDELINES_DEV=true vite -c vite.config.ts preview",
    "clean": "mkdir -p ./tmp ./build ./dist && rm -rf ./tmp/* ./build/* ./dist/*",
    "packlocal": "export PKGNAME=ottoapi-guidelines; mkdir -p ./tmp && rm -rf ./tmp/*-$PKGNAME-*.tgz; rm -rf ./tmp/package; npm pack && mv -f *-$PKGNAME-*.tgz ./tmp/ && tar xfz ./tmp/*-$PKGNAME-*.tgz -C ./tmp",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otto-ec/ottoapi_guidelines.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/otto-ec/ottoapi_guidelines/issues"
  },
  "homepage": "https://github.com/otto-ec/ottoapi_guidelines#readme",
  "bender": {
    "eslint_env_node": true,
    "eslint_env_browser": true,
    "eslint_plugin_compat": false,
    "eslint_plugin_jest": false
  },
  "toolbox": {
    "configs": [
      "@otto-ec/toolbox-config-assets"
    ]
  },
  "devDependencies": {
    "@otto-ec/assets-core-utils": "^1.3.1",
    "@otto-ec/assets-debug": "^1.3.0",
    "@otto-ec/bender": "^1.14.0",
    "@otto-ec/ottoapi-cli": "^1.6.8",
    "@otto-ec/ottoapi-portal-common": "^0.2.13",
    "@otto-ec/ottoapi-portal-guidelines": "^0.1.8",
    "@otto-ec/toolbox": "^2.1.2",
    "@otto-ec/toolbox-cli-core": "^1.3.0",
    "@otto-ec/toolbox-config-assets": "^1.29.2",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^16.11.7",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/compiler-sfc": "^3.2.26",
    "markdown-it": "^12.3.2",
    "markdown-it-attrs": "^4.1.3",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-highlightjs": "^3.6.0",
    "rollup": "^2.59.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.43.4",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.10"
  }
}
