{
  "name": "@otto-ec/ottoapi-guidelines",
  "version": "1.6.0",
  "description": "This repository is the source for establishing a uniform API standard (aka API Guidelines), which serves as a set of rules for the creation of new APIs within MA-EC. (In the future, this standard can also be used to unify existing APIs.) The [API Manifesto](/manifesto.md) helps to establish this standard and comprises values that a work group has agreed upon in advance.",
  "files": [
    "changes",
    "content/**/*.md"
  ],
  "scripts": {
    "build": "vite -c vite.config.ts build",
    "dev": "npm run serve",
    "lint": "bender ml --files \"content/guidelines/**/*.md\"",
    "bump": "npm run cli -- guidelines bump",
    "cli": "FORCE_COLOR=true DEBUG_COLORS=true DEBUG_DEPTH=6 DEBUG_LEVEL=${DEBUG_LEVEL:-warning} DEBUG=ottoapi-cli:* ottoapi --debug ''",
    "nextRuleId": "npm run collect -- nextid",
    "links:broken": "npm run collect -- bad-links",
    "rules:nextid": "npm run collect -- nextid",
    "rules:list": "npm run collect -- list-rules",
    "collect": "ts-node --project tsconfig.cli.json -T cli/index.ts ",
    "serve": "VITE_GUIDELINES_DEV=true VITE_COMMON_DEV=true vite -c vite.config.ts",
    "preview": "vite -c vite.config.ts preview",
    "clean": "mkdir -p ./tmp ./build ./dist && rm -rf ./tmp/* ./build/* ./dist/*",
    "packlocal": "export PKGNAME=ottoapi-guidelines; mkdir -p ./tmp && rm -rf ./tmp/*-$PKGNAME-*.tgz; rm -rf ./tmp/package; npm pack && mv -f *-$PKGNAME-*.tgz ./tmp/ && tar xfz ./tmp/*-$PKGNAME-*.tgz -C ./tmp",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otto-ec/ottoapi_guidelines.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/otto-ec/ottoapi_guidelines/issues"
  },
  "homepage": "https://github.com/otto-ec/ottoapi_guidelines#readme",
  "bender": {
    "eslint_env_node": true,
    "eslint_env_browser": true,
    "eslint_plugin_compat": false,
    "eslint_plugin_jest": false
  },
  "toolbox": {
    "configs": [
      "@otto-ec/toolbox-config-assets"
    ]
  },
  "devDependencies": {
    "@otto-ec/assets-core-utils": "^1.10.0",
    "@otto-ec/assets-debug": "^2.1.2",
    "@otto-ec/bender": "^1.14.2",
    "@otto-ec/ottoapi-cli": "^1.9.0",
    "@otto-ec/ottoapi-portal-guidelines": "^0.1.28",
    "@otto-ec/toolbox": "^3.1.0",
    "@otto-ec/toolbox-cli-core": "^1.9.0",
    "@otto-ec/toolbox-config-assets": "^1.30.1",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.6.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vueuse/core": "^8.9.4",
    "@vueuse/shared": "^8.9.4",
    "prismjs": "^1.28.0",
    "rollup-plugin-copy": "^3.4.0",
    "sass": "^1.54.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.14",
    "vue": "^3.2.37",
    "vue-router": "^4.1.2",
    "vuex": "^4.0.2"
  }
}
