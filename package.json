{
  "name": "ottoapi-guidelines",
  "version": "1.0.0",
  "description": "This repository is the source for establishing a uniform API standard (aka API Guidelines), which serves as a set of rules for the creation of new APIs within MA-EC. (In the future, this standard can also be used to unify existing APIs.) The [API Manifesto](/manifesto.md) helps to establish this standard and comprises values that a work group has agreed upon in advance.",
  "main": "index.js",
  "scripts": {
    "build": "(for S in clean images js css collect; do npm run build:$S; [ $? -ne 0 ] && exit 1; done; exit 0;)",
    "build:images": "cp -R src/img/* dist",
    "build:js": "rollup -c && kestrel build --js",
    "build:clean": "npm run clean",
    "build:css": "kestrel build --css",
    "build:collect": "FORCE_COLOR=true DEBUG_COLORS=true DEBUG_DEPTH=6 DEBUG_LEVEL=debug DEBUG=collect:* npm run collect",
    "dev": "npm run build:clean && concurrently \"npm run watch:model\" \"npm run watch:js\" \"npm run watch:css\" \"npm run watch:render\"",
    "dev:docker": "concurrently \"npm run watch:model -- -L\" \"npm run watch:render -- -L\" \"npm run serve\"",
    "deploy": "tb s3 upload && tb cloudfront invalidate",
    "lint": "(for S in src docs; do npm run lint:$S; [ $? -ne 0 ] && exit 1; done; exit 0;)",
    "lint:src": "eslint --fix './src/**/*.[t|j]s'",
    "lint:docs": "npm run collect -- lint",
    "nextRuleId": "npm run collect -- nextid",
    "links:broken": "npm run collect -- bad-links",
    "rules:nextid": "npm run collect -- nextid",
    "rules:list": "npm run collect -- list-rules",
    "collect": "ts-node -T src/collect/index.ts ",
    "watch:render": "nodemon --inspect --config config/nodemon.render.json -x 'npm run collect -- render'",
    "watch:model": "nodemon --config config/nodemon.model.json -x 'npm run build:collect -- model'",
    "watch:css": "nodemon --config config/nodemon.css.json -x 'npm run build:css && npm run build:images'",
    "watch:js": "nodemon --config config/nodemon.js.json -x 'npm run build:js'",
    "serve": "browser-sync start -s \"dist\" -f \"dist\" -w",
    "clean": "mkdir -p ./tmp ./build ./dist && rm -rf ./tmp/* ./build/* ./dist/*",
    "packci": "echo 'TODO'",
    "reveal": "reveal-md $1 --theme presentations/themes/otto-api.css --highlight-theme atom-one-dark-reasonable",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otto-ec/ottoapi_guidelines.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/otto-ec/ottoapi_guidelines/issues"
  },
  "homepage": "https://github.com/otto-ec/ottoapi_guidelines#readme",
  "bender": {
    "eslint_env_node": true,
    "eslint_env_browser": true,
    "eslint_plugin_compat": false
  },
  "toolbox": {
    "configs": [
      "@otto-ec/toolbox-config-assets"
    ]
  },
  "dependencies": {
    "@otto-ec/assets-debug": "^1.2.2",
    "@otto-ec/bender": "^1.11.0",
    "@otto-ec/kestrel": "^4.0.4",
    "@otto-ec/toolbox": "^1.20.3",
    "@otto-ec/toolbox-config-assets": "^1.27.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/markdown-it": "^12.0.1",
    "@types/node": "^15.3.0",
    "@types/table": "^6.3.2",
    "browser-sync": "^2.26.14",
    "chalk": "^4.1.1",
    "concurrently": "^6.1.0",
    "globby": "^11.0.3",
    "handlebars": "^4.7.7",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^12.0.6",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-front-matter": "^0.2.3",
    "markdown-it-highlightjs": "^3.5.0",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.27.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.7",
    "reveal-md": "^5.1.0",
    "rollup": "^2.48.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sass": "^1.32.13",
    "table": "^6.7.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "uikit": "^3.6.21",
    "yargs": "^17.0.1"
  }
}
