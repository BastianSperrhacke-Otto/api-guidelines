{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@Common/*": ["node_modules/@otto-ec/ottoapi-portal-common/src/*"],
      "@Guidelines/*": ["node_modules/@otto-ec/ottoapi-portal-guidelines/src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/main.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/tests/**/*.ts",
    "src/tests/**/*.tsx",
    "node_modules/@otto-ec/ottoapi-*/src/**/*.ts",
    "node_modules/@otto-ec/ottoapi-*/src/**/*.tsx",
    "node_modules/@otto-ec/ottoapi-*/src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
